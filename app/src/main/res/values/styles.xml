<?xml version="1.0" encoding="utf-8"?>
<resources>
        <style name="style_et">
            <item name="android:layout_marginLeft">50dp</item>
            <item name="android:layout_marginRight">30dp</item>
            <item name="android:backgroundTint">@color/black</item>
            <item name="android:textSize">28sp</item>
            <item name="android:fontFamily">@font/letters_for_learners</item>
            <item name="android:textColorHint">@color/black</item>
        </style>
    <style name="style_til">
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:layout_marginRight">30dp</item>
    </style>
    <style name="style_tiet">
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">@font/letters_for_learners</item>
        <item name="android:textColorHint">@color/black</item>
    </style>
    <style name="style_ll">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="style_tv">
        <item name="android:fontFamily">@font/letters_for_learners</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">45dp</item>
        <item name="android:layout_marginRight">35dp</item>
    </style>

    <style name="style_spinner">
        <item name="fontFamily">@font/letters_for_learners</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="style_result_table_row">
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:layout_marginBottom">2dp</item>
    </style>

    <style name="style_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">3dp</item>
        <item name="background">@color/green</item>
    </style>

    <style name="style_result_tv_left">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">3</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/letters_for_learners</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="style_result_tv_right">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/letters_for_learners</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
</resources>